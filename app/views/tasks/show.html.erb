<h1><%= "#{@task.title} Task" %></h1>
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<p> <%= link_to "All tasks", tasks_path %> </p>
<p> <%= link_to "Edit this task", edit_path %> </p>
<p> <%= link_to "Create new task", create_path %> </p>
<%= link_to "Delete task",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
